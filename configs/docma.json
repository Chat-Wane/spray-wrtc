{
  "src": [
        "./lib/**/*.js",
        "./README.md",
        { "demo": "./examples/docma/spray-docma.html" }
    ],
    "dest": "./docs/",
    "assets": {
      "/js": [
        "./examples/spray.js",
        "./node_modules/chart.js/dist/Chart.min.js",
        "./node_modules/sigma/build/sigma.min.js",
        "./node_modules/sigma/build/plugins/sigma.parsers.json.min.js",
        "./node_modules/sigma/src/renderers/canvas/sigma.canvas.edges.curvedArrow.js",
        "./bin/spray-wrtc.bundle.js",
        "./bin/spray-wrtc.bundle.js.map"
      ],
      "/img": "./img/*"
    },
    "clean": true,
    "app": {
      "title": "spray-wrtc",
      "entrance": "content:readme",
      "base": "/spray-wrtc/",
      "server": "github"
    },
    "markdown": {
      "gfm": true,
      "sanitize": false,
      "xhtml": true
    },
    "template": {
        "path": "zebra",
        "options": {
            "title": {
                "label": "spray-wrtc",
                "href": "?content=readme"
            },
            "sidebar": {
                "enabled": true,
                "outline": "tree",
                "collapsed": false,
                "toolbar": true,
                "itemsFolded": false,
                "itemsOverflow": "crop",
                "badges": true,
                "search": true,
                "animations": true
            },
            "symbols": {
                "autoLink": true,
                "params": "list",
                "enums": "list",
                "props": "list",
                "meta": false
            },
            "contentView": {
                "bookmarks": true
            },
            "navbar": {
                "enabled": true,
                "dark": false,
                "animations": true,
                "menu": [
                    {
                        "label": "Demo",
                        "iconClass": "fas fa-book",
                        "href": "/content/demo.html",
                        "target": "_blank"
                    },
                    {
                        "label": "Docs",
                        "iconClass": "fas fa-book",
                        "href": "?api"
                    },
                    {
                        "label": "Download",
                        "iconClass": "fas fa-cloud-download-alt",
                        "items": [
                            {
                                "label": "Latest Version",
                                "href": "https://github.com/RAN3D/spray-wrtc/archive/master.zip"
                            }
                        ]
                    },
                    {
                        "label": "GitHub",
                        "iconClass": "fab fa-github",
                        "href": "https://github.com/RAN3D/spray-wrtc",
                        "target": "_blank"
                    }
                ]
            }
        }
    }
}
